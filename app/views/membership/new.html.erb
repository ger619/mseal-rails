<%= form_with  model: @membership, url: membership_index_path, method: :post, data: { turbo: false }, local: true do |f| %>

<div class="md:p-0">
  <div class="p-6 bg-[#FAE115] font-bold uppercase lg:text-5xl md:text-4xl text-3xl flex justify-between">
    Membership
  </div>
  <div class="md:w-[800px] lg:w-[1024px] flex flex-col gap-4 md:my-24 md:mx-auto bg-[#F7F3ED] md:p-8">
    <h1 class="md:text-5xl text-2xl ">
      JOIN OUR MEMBERSHIP TODAY AND ENJOY OUR PREMIUM SERVICES
    </h1>
    <p class="text-xl font-light mt-5">
      We would love for you to be part of us.
    </p>
    <div>
      <label htmlFor="">
        Type of membership interested in
        <span class="text-red-500">*</span>
      </label>
      <div>
        <%= f.text_field :type_of_membership, class: "border-b border-[#000] w-[100%] bg-[#F7F3ED] focus:outline-none" ,placeholder: "Type of Membership"%>
      </div>
    </div>

    <div class="flex  justify-between">
      <%= f.text_field :title, class: "h-[50px] w-[45%] p-2 border-b border-black bg-[#F7F3ED] focus:outline-none" ,placeholder: "Title"%>
      <%= f.text_field :names, class: "h-[50px] flex items-center p-2 w-[45%] border-b bg-[#F7F3ED] border-black focus:outline-none" ,placeholder: "Names"%>

    </div>
    <div class="flex justify-between">
      <%= f.text_field :country, class: "h-[50px] w-[45%] bg-[#F7F3ED] p-2 border-b border-black focus:outline-none" ,placeholder: "County/Region"%>
      <%= f.date_field :date_of_birth, class: "h-[50px] flex bg-[#F7F3ED] items-center p-2 w-[45%] border-b border-black focus:outline-none" ,placeholder: "Date of Birth *"%>

    </div>

    <%= f.email_field :email, class: "h-[50px] bg-[#F7F3ED] w-[100%] p-2 border-b border-black focus:outline-none" ,placeholder: "Email  *"%>

    <div class="flex flex-col md:flex-row justify-between">
      <div>
        <p class="md:w-[60%] mb-6">
          Murang&lsquo;a seals may contact me by:
        </p>
        <%= f.telephone_field :phone_number, class: "h-[50px] w-[100%] p-2 border-b bg-[#F7F3ED] border-black focus:outline-none" ,placeholder: "Phone No"%>

      </div>
      <div class="lg:w-[855px] md:max-w-[600px] mt-3 md:mt-0 text-xl">
        Please let us know using the dropdown if you would like to be
        contacted by Murang&lsquo;a seals and its group companies with news
        and promotional information about Murang&lsquo;a seals its official
        sponsors and partners and their products and services, where we have
        the relevant contact details. Please read our Privacy Policy to
        learn more about us and its group companies, how we use your
        information and how to change your mind about receiving marketing
        from us.
      </div>
    </div>
    <%= f.submit "REGISTER", class: "w-[300px] mt-10 mb-10 md:mb-10 md:mt-16  mx-auto p-4 bg-[#F4E721] text-3xl text-black" %>
  </div>
</div>
<% end %>