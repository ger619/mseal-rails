<%= form_with  model: @club, url: club_index_path, method: :club, data: { turbo: false }, local: true do |f| %>

    <div class="md:w-[1280px] flex flex-col gap-4 md:my-12 md:mx-auto bg-[#F7F3ED] text-black text-black text-black md:p-4">
      <h1 class="md:text-5xl text-2xl ">
        Ensure you have installed grammarly and it is working!
      </h1>
      <p class="text-xl font-light mt-5">
        Club details
      </p>

      <div class="flex  justify-between">
        <%= f.select :header, options_for_select([%w[History History], %w[Management Management], ['Club Records', 'Records']]), {}, class: "h-[50px] w-[45%] p-2 border-b border-black bg-white focus:outline-none", required: true %>
        <%= f.file_field :photo, class: "h-[50px] flex items-center p-2 w-[45%] bg-[#F7F3ED] text-black text-black text-black border-black focus:outline-none" ,placeholder: "Upload A Photo", required: true%>

      </div>

      <%= f.rich_text_area :content, class: "bg-white h-[500px]  w-[100%] p-2 border-b border-black focus:outline-none",  placeholder: "Add the details to 800 words  *" %>


      <%= f.submit "POST", class: "w-[300px] mt-10 mb-10 md:mb-10 md:mt-16  mx-auto p-4 bg-[#F4E721] text-3xl text-black" %>
    </div>

<% end %>