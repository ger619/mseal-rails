<%= form_with  model: @product, url: product_path(@product), method: :patch, data: { turbo: false }, local: true do |f| %>

  <div class="md:p-0">
    <div class="p-6 bg-[#FAE115] font-bold uppercase lg:text-5xl md:text-4xl text-3xl flex justify-between">
      Edit a Product
    </div>
    <div class="md:w-[800px] lg:w-[1024px] flex flex-col gap-4 md:my-24 md:mx-auto bg-[#F7F3ED] md:p-8">
      <h1 class="md:text-5xl text-2xl ">
        Edit A Product
      </h1>

      <div class="flex  justify-between ">
        <%= f.text_field :name, class: "h-[50px] w-[45%] p-2 border-b border-black bg-[#F7F3ED] focus:outline-none" ,placeholder: "Name of the Product", :required => :true %>
        <%= f.number_field :price, class: "h-[50px] flex items-center p-2 w-[45%] border-b bg-[#F7F3ED] border-black focus:outline-none" ,placeholder: "Price: ", :required => :true %>

      </div>
      <div class="mb-4 flex">
        <p><%= image_tag f.object.photo_product, class: 'w-48' if f.object.photo_product.present? %></p>
        <p class="content-center"><%= f.file_field :photo_product, class: "appearance-none border rounded w-full h-1/2 py-2 px-3 leading-tight focus:outline-none focus:shadow-outline", placeholder: "All Photos on the site must be landscape" %></p>
      </div>


      <%= f.rich_text_area :content, class: "bg-[#F7F3ED] w-[100%] p-2 border-b border-black focus:outline-none", placeholder: "Product Description  *", :required => :true%>

      <%= f.submit "CREATE PRODUCT", class: "w-[300px] mt-10 mb-10 md:mb-10 md:mt-16  mx-auto p-4 bg-[#F4E721] text-3xl text-black font-semibold" %>
    </div>
  </div>
<% end %>