<div class="my-4 ml-8">
  <h1 class="text-4xl pb-4 md:pb-0 md:p-4 font-bold">Defenders</h1>
  <hr class="ml-4 w-[6%] bg-[#FAE115] h-[10px] mb-2">
  <div class="grid xl:grid-cols-4 lg:grid-cols-3  md:grid-cols-2 flex-col text-center p-2">

    <% @teams.each do |team| %>
      <% if team.position === "Defender" %>
        <% unless (current_user.nil? || current_user === "user") && team.active ==! true%>
        <%= link_to team_path(team.id) do %>
            <div class="w-[300px] flex-flex-col cursor-pointer hover:scale-105 hover:text-[#FAE115] transition ease-in-out duration-500 border border-[#f4e721] rounded">
            <% if team.image.attached? %>
              <%= image_tag(team.image, class: "[h-200px]") %>
            <% end %>
            <div class="flex justify-between p-3 bg-[#f3f3f3]">
              <div class="flex flex-col">
                <h1 class="self-start"><%= team.first_name %></h1>
                <h1 class="font-semibold text-2xl"><%= team.last_name %></h1>
              </div>
              <h1 class="text-5xl"><%= team.jersey_number %></h1>
            </div>
          </div>
        <% end %>
          <% end %>
      <% end %>
    <% end %>

  </div>

</div>