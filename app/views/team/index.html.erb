
  <div >
    <!-- Main Container -->
    <div class="max-w-screen-xl mx-auto p-6">
      <!-- Title -->
      <h2 class="text-3xl font-semibold text-center mb-10">MURANG'A SEAL FIRST TEAM</h2>

      <!-- Tabs for Positions -->
      <div class="mb-10 text-center">
        <ul class="flex justify-center space-x-6">
          <li><button class="text-lg text-gray-600">ALL PLAYERS</button></li>
          <li><button class="text-lg text-gray-600">GOALKEEPERS</button></li>
          <li><button class="text-lg text-gray-600">DEFENDERS</button></li>
          <li><button class="text-lg text-gray-600">MIDFIELDERS</button></li>
          <li><button class="text-lg text-gray-600">FORWARDS</button></li>
          <li><button class="text-lg text-gray-600">COACHING STAFF</button></li>
        </ul>
      </div>
      <div>
        <% if current_user && current_user.role === 'moderator'  %>
          <%=link_to "Add Player", new_team_path, class: "normal-case border-2 border-[#fff] hover:bg-[#fff] font-normal lg:text-2xl md:text-xl sm:text-sm sm:text-xl text-white hover:text-[#FAE115] p-2 rounded mb-2" %>
        <% end %>
      </div>

      <div class="space-y-10">
        <!-- Section: Goalkeepers -->
        <div>
          <h3 class="text-2xl font-semibold text-center mb-6">GOALKEEPERS</h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <!-- Player Card -->
            <!-- Player Card -->
            <div class="relative group w-full h-96 overflow-hidden">
              <img src="./assets/player-image-squared.png" alt="IÑAKI PEÑA" class="w-full h-full object-cover">
              <!-- Default Info -->
              <div class="absolute inset-0 bg-gradient-to-t from-black via-black to-transparent flex items-center justify-center text-center transition-all duration-300 group-hover:hidden">
                <div class="flex flex-col items-center justify-end h-full p-4 text-white">
                  <p class="text-xl font-bold mb-1">IÑAKI PEÑA</p>
                  <p class="text-sm text-gray-400 mb-4">Goalkeeper</p>
                </div>
              </div>

              <!-- Hover Details -->
              <div class="absolute inset-0 bg-gradient-to-t from-black via-black to-transparent hidden group-hover:flex flex-col items-center justify-center p-4 text-white transition-all duration-300">
                <div class="flex justify-around w-full mb-4">
                  <div class="text-center">
                    <p class="text-xs uppercase text-gray-400">Barça Appearances</p>
                    <p class="text-2xl font-bold">95</p>
                    <p class="text-sm text-yellow-500">15</p>
                  </div>
                  <div class="text-center">
                    <p class="text-xs uppercase text-gray-400">Barça Goals</p>
                    <p class="text-2xl font-bold">2</p>
                    <p class="text-sm text-yellow-500">0</p>
                  </div>
                  <div class="text-center">
                    <p class="text-xs uppercase text-gray-400">Barça Assists</p>
                    <p class="text-2xl font-bold">9</p>
                    <p class="text-sm text-yellow-500">2</p>
                  </div>
                </div>
                <p class="text-xs text-gray-400">2024/2025 SEASON</p>
              </div>
            </div>

          </div>
        </div>
      </div>

      <!-- Repeat Player Card for other goalkeepers... -->
    </div>

    <div>
      <%= render "team/goalkeeper" %>
      <%= render "team/defenders" %>
      <%= render "team/midfielders" %>
      <%= render "team/forward" %>
      <%= render "team/coach" %>

    </div>



  </div>
