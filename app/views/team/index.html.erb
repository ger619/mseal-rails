<div>
  <!-- Main Container -->
  <div class="max-w-screen-xl mx-auto p-6">
    <!-- Title -->
    <h2 class="text-2xl sm:text-3xl font-semibold text-center mb-10">MURANG'A SEAL FIRST TEAM</h2>

    <div class="mb-10 text-center">
      <ul class="flex flex-wrap justify-center space-x-2 sm:space-x-6">
        <li>
          <button
            class="text-sm sm:text-lg tablinks hover:text-[#fae115] hover:underline"
            id="tab-All_players"
            onclick="openCity(event, 'All_players')"
          >
            ALL PLAYERS
          </button>
        </li>
        <li>
          <button
            class="text-sm sm:text-lg tablinks hover:text-[#fae115] hover:underline"
            id="tab-GoalKeeper"
            onclick="openCity(event, 'GoalKeeper')"
          >
            GOALKEEPERS
          </button>
        </li>
        <li>
          <button
            class="text-sm sm:text-lg tablinks hover:text-[#fae115] hover:underline"
            id="tab-Defenders"
            onclick="openCity(event, 'Defenders')"
          >
            DEFENDERS
          </button>
        </li>
        <li>
          <button
            class="text-sm sm:text-lg tablinks hover:text-[#fae115] hover:underline"
            id="tab-Midfielders"
            onclick="openCity(event, 'Midfielders')"
          >
            MIDFIELDERS
          </button>
        </li>
        <li>
          <button
            class="text-sm sm:text-lg tablinks hover:text-[#fae115] hover:underline"
            id="tab-Forward"
            onclick="openCity(event, 'Forward')"
          >
            FORWARD
          </button>
        </li>
        <li>
          <button
            class="text-sm sm:text-lg tablinks hover:text-[#fae115] hover:underline"
            id="tab-Coach"
            onclick="openCity(event, 'Coach')"
          >
            COACHING STAFF
          </button>
        </li>
      </ul>
    </div>

    <div id="All_players" class="tabcontent active">
      <%= render 'team/all_players' %>
    </div>

    <div id="GoalKeeper" class="tabcontent">
      <%= render 'team/goalkeeper' %>
    </div>

    <div id="Defenders" class="tabcontent">
      <%= render 'team/defenders'%>
    </div>

    <div id="Midfielders" class="tabcontent">
      <%= render 'team/midfielders'%>
    </div>

    <div id="Forward" class="tabcontent">
      <%= render 'team/forward'%>
    </div>

    <div id="Coach" class="tabcontent">
      <%= render 'team/coach'%>
    </div>

    <div>
      <% if current_user && current_user.role === 'moderator' %>
        <%= link_to "Add Player", new_team_path, class: "normal-case border-2 border-[#fff] hover:bg-[#fff] font-normal text-sm sm:text-xl md:text-2xl text-white hover:text-[#FAE115] p-2 rounded mb-2" %>
      <% end %>
    </div>
  </div>
</div>

<script>
    function openCity(evt, cityName) {
        const tabcontent = document.getElementsByClassName("tabcontent");
        const tablinks = document.getElementsByClassName("tablinks");

        // Hide all tab content
        for (let i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }

        // Remove active class from all tab links
        for (let i = 0; i < tablinks.length; i++) {
            tablinks[i].classList.remove("text-[#fae115]", "underline");
        }

        // Show current tab content and add active class to clicked tab
        document.getElementById(cityName).style.display = "block";
        evt.currentTarget.classList.add("text-[#fae115]", "underline");
    }

    // Set default tab to open
    document.getElementById("tab-All_players").click();
</script>