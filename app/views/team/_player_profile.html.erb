<div class="w-full md:w-3/4 bg-white mt-4 p-2 mx-auto">
  <div class="p-4">
    <div class="flex-col justify-self-center gap-4">
      <label for="tackles_attempted" class="capitalize content-center font-extralight start text-2xl underline underline-offset-8 mb-4">PLAYER PROFILE</label>
    </div>
    <div class="text-gray-800">
    <div class="grid grid-cols-3 gap-4 mt-4">
      <div class="col-span-1">
        <p class="capitalize text-sm md:text-xl">Name</p>
        <p class="capitalize text-sm md:text-xl">Squad Number</p>
        <p class="capitalize text-sm md:text-xl">Date of Birth</p>
        <p class="capitalize text-sm md:text-xl">Age</p>
        <p class="capitalize text-sm md:text-xl">Murang'a Seal Debut</p>
        <p class="capitalize text-sm md:text-xl">First Goal</p>
        <p class="capitalize text-sm md:text-xl">Previous Clubs</p>
        <p class="capitalize text-sm md:text-xl">Twitter</p>
        <p class="capitalize text-sm md:text-xl">Instagram</p>


      </div>
      <div class=" col-span-2 pl-10 font-extralight">
        <p class="text-sm md:text-xl"><%= @team.first_name %> <%= @team.second_name %> <%= @team.last_name %> </p>
        <p class="text-sm md:text-xl"><% if @team.jersey_number.present? %>
            <%= @team.jersey_number %>
            <% else %>

            None
          <% end %>
        </p>
        <p class="text-sm md:text-xl"><% if @team.date_of_birth.present? %>
            <%= @team.date_of_birth.strftime("%b, %d %Y") %>
            <% else %>
          None

          <% end %>
        <p class="text-sm md:text-xl"><% if @team.age.present? %>
            <%= @team.age %>
            <% else %>
          0
          <% end %>
            </p>

        <p class="text-sm md:text-xl"><% if @team.mseal_debut.present? %>
            <%= @team.mseal_debut %>
            <% else %>
            None
          <% end %>
        </p>
        <p class="text-sm md:text-xl">
          <% if @team.first_goal.present? %>
            <%= @team.first_goal %>
          <% else %>
            None
          <% end %>
        </p>
        <p class="text-sm md:text-xl">
          <% if @team.previous_club.present? %>
            <%= @team.previous_club %>
            <% else %>
          None
          <% end %>
        </p>
        <p class="text-sm md:text-xl"><%=link_to "Twitter", url_for(@team.twitter), :target => "_blank" %></p>
        <p class="text-sm md:text-xl"><%= link_to "Instagram", url_for(@team.instagram), :target => "_blank" %> </p>

      </div>

    </div>
    </div>

  </div>

</div>