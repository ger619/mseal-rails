<!-- Team Section with Timer -->
<section class="bg-black py-4 text-gray-200">
  <div class="container mx-auto px-4">
    <div class="bg-white p-4">
      <div class="flex flex-col sm:flex-row items-center justify-between py-4 px-4 sm:px-8 bg-white shadow-b">
        <div class="flex flex-col sm:flex-row items-center space-x-2">
          <h1 class="text-xl sm:text-2xl font-semibold text-gradient bg-clip-text text-transparent bg-gradient-to-r from-[#fae115] to-black">
            Murang'a Seal
          </h1>
          <span class="text-xl sm:text-2xl font-semibold text-gradient bg-clip-text text-transparent bg-gradient-to-r from-[#fae115] to-black">
            First Team
          </span>
        </div>

        <!-- Countdown Section -->
        <div class="flex flex-col sm:flex-row items-center space-x-2 sm:space-x-4 text-gray-500 mt-4 sm:mt-0">
          <span class="text-xs uppercase tracking-wide">Next Match</span>
          <div>
            <div id="countdown" class="flex items-center space-x-1 sm:space-x-2 text-[#fae115] font-bold text-xl sm:text-3xl">
              <!-- Days -->
              <span>00</span>
              <span class="text-gray-400">:</span>
              <!-- Hours -->
              <span id="hours">20</span>
              <span class="text-gray-400">:</span>
              <!-- Minutes -->
              <span id="minutes">00</span>
              <span class="text-gray-400">:</span>
              <!-- Seconds -->
              <span id="seconds">00</span>
            </div>
            <!-- Labels -->
            <div class="flex justify-center sm:justify-start ml-1 items-center space-x-2 sm:space-x-4 text-xs sm:text-sm text-gray-400 uppercase tracking-wide">
              <span>Days</span>
              <span>Hours</span>
              <span>Mins</span>
              <span>Secs</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Cards Section -->
      <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4 mt-6">
        <!-- Card 1 -->
        <div class="bg-white shadow-md overflow-hidden w-full sm:w-auto">
          <%= link_to opponent_index_path do %>
            <%= image_tag('results.png', class: "w-full h-32 sm:h-full", alt: "Background Image" ) %>
          <% end %>
        </div>

        <!-- Card 2 -->
        <%= render 'latest_fixtures' %>

        <!-- Card 3 -->
        <%= render 'home/result_match' %>
      </div>
    </div>
  </div>
</section>

<!-- Shopping section -->
<%= render 'home/muranga_seal_store' %>

<%= render 'home/muranga_news' %>

<%= render 'home/player_section' %>