<!-- Team Section with Timer -->
<section class="bg-black py-4 text-gray-200">
  <div class="container mx-auto px-4">
    <div class="bg-white p-4">
      <div class="flex flex-col sm:flex-row items-center justify-between py-4 px-4 sm:px-8 bg-white shadow-b">
        <div class="flex flex-col sm:flex-row items-center space-x-2">
          <h1 class="text-xl sm:text-2xl font-semibold text-gradient bg-clip-text text-transparent bg-gradient-to-r from-[#fae115] to-black">
            Murang'a Seal
          </h1>
          <span class="text-xl sm:text-2xl font-semibold text-gradient bg-clip-text text-transparent bg-gradient-to-r from-[#fae115] to-black">
            First Team
          </span>
        </div>

        <!-- Countdown Section -->
        <%= render 'home/count_down' %>
      </div>

      <!-- Cards Section -->
      <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4 mt-6">
        <!-- Card 1 -->

          <%= link_to opponent_index_path, class: 'w-full sm:w-1/3 flex items-center justify-center text-white font-bold text-2xl sm:text-4xl sm:whitespace-normal whitespace-nowrap p-10 sm:p-0', style: "background: linear-gradient(to bottom right, #ffd700, #000000);" do %>
            View All Results
          <% end %>

        <!-- Card 2 -->
        <%= render 'latest_fixtures' %>

        <!-- Card 3 -->
        <%= render 'home/result_match' %>
      </div>
    </div>
  </div>
</section>

<!-- Shopping section -->
<%= render 'home/muranga_seal_store' %>

<%= render 'home/muranga_news' %>

<%= render 'home/player_section' %>