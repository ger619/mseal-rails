
<div class="flex flex-col justify-center md:flex-row ">
  <div class="grid  md:grid-cols-3  grid-cols-1 flex-col text-center p-2">
    <% @team.each do |team| %>
      <% if team.present? %>
        <% unless (current_user.nil? || current_user === "user") && team.active ==! true %>
          <%= link_to team_path(team.id) do %>
            <div class="w-[300px] flex flex-col cursor-pointer hover:scale-105 hover:text-[#FAE115] transition ease-in-out duration-500 md:mb-0 mb-2 md:mx-0 mx-auto pr-2">
              <% if team.image.attached? %>
                <%= image_tag(team.image) %>
              <% end %>
              <div class="flex justify-between p-3 bg-[#ffffff]">
                <div class="flex flex-col">
                  <p class="self-start font-extralight uppercase"><%= team.first_name %></p>
                  <p class="self-start font-semibold text-2xl capitalize"><%= team.last_name %></p>
                </div>
                <p class="text-5xl"><%= team.jersey_number %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>