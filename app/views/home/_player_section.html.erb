<section>
  <!-- Players Section -->
  <div class="py-16 relative overflow-hidden" style="background: linear-gradient(to bottom right, #FFC107, #1E40AF)">
    <div class="max-w-screen-lg mx-auto px-6 relative">
      <!-- Title -->
      <h1 class="text-center text-white text-4xl md:text-5xl font-bold mb-10">
        Players
      </h1>

      <!-- Carousel -->
      <div class="relative">
        <div id="carousel" class="flex space-x-6 overflow-x-auto snap-x snap-mandatory scrollbar-hide">
          <!-- Player Cards -->
          <div class="carousel-item flex-shrink-0 w-1/3 md:w-1/4 snap-center">
            <div class="rounded-lg overflow-hidden">
              <img src="./assets/player-profile.png" alt="Player 1" class="w-full h-auto object-cover" />
            </div>
            <p class="text-center text-white mt-2">Player 1</p>
          </div>

          <div class="carousel-item flex-shrink-0 w-1/3 md:w-1/4 snap-center">
            <div class="rounded-lg overflow-hidden">
              <img src="./assets/player-profile.png" alt="Player 2" class="w-full h-auto object-cover" />
            </div>
            <p class="text-center text-white mt-2">Player 2</p>
          </div>

          <div class="carousel-item flex-shrink-0 w-1/3 md:w-1/4 snap-center">
            <div class="rounded-lg overflow-hidden">
              <img src="./assets/player-profile.png" alt="Player 3" class="w-full h-auto object-cover" />
            </div>
            <p class="text-center text-white mt-2">Player 3</p>
          </div>

          <div class="carousel-item flex-shrink-0 w-1/3 md:w-1/4 snap-center">
            <div class="rounded-lg overflow-hidden">
              <img src="./assets/player-profile.png" alt="Player 4" class="w-full h-auto object-cover" />
            </div>
            <p class="text-center text-white mt-2">Player 4</p>
          </div>
        </div>

        <!-- Navigation Buttons -->
        <button
          class="absolute left-0 top-1/2 transform -translate-y-1/2 text-white text-2xl bg-transparent border-none focus:outline-none z-10"
          onclick="scrollLeft()">
          &larr;
        </button>
        <button
          class="absolute right-0 top-1/2 transform -translate-y-1/2 text-white text-2xl bg-transparent border-none focus:outline-none z-10"
          onclick="scrollRight()">
          &rarr;
        </button>
      </div>
    </div>
  </div>
</section>

<script>
    const carousel = document.getElementById('carousel');
    const itemWidth = carousel.firstElementChild.offsetWidth;

    function scrollLeft() {
        // Move the last item to the front and adjust scroll instantly
        const lastItem = carousel.lastElementChild;
        carousel.prepend(lastItem);
        carousel.scrollLeft += itemWidth;

        // Smooth scroll to correct position
        carousel.scrollBy({
            left: -itemWidth,
            behavior: 'smooth',
        });
    }

    function scrollRight() {
        // Smoothly scroll first
        carousel.scrollBy({
            left: itemWidth,
            behavior: 'smooth',
        });

        // After the scroll finishes, move the first item to the end
        setTimeout(() => {
            const firstItem = carousel.firstElementChild;
            carousel.appendChild(firstItem);
            carousel.scrollLeft -= itemWidth;
        }, 300); // Adjust the timing based on your needs
    }
</script>

<style>
    .scrollbar-hide::-webkit-scrollbar {
        display: none;
    }
    .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>
