<!-- Card 3 -->
<% @results.limit(1).each do |opp| %>
  <div class="bg-white shadow-md overflow-hidden w-full sm:w-1/3">
    <div class="relative flex flex-col sm:flex-row items-center bg-gradient-to-r from-gray-900 to-purple-900 p-4 sm:p-5 shadow-lg">
      <!-- Date Section -->
      <div class="flex items-center justify-center text-white text-2xl sm:text-4xl font-bold pr-0 sm:pr-4">
        <div class="text-center">
          <p>
            <%= opp.match_date.strftime("%d") %>
          </p>
        </div>
        <div>
          <p class="text-xs sm:text-sm font-light uppercase">
            <%= opp.match_date.strftime("%A") %>
          </p>
          <p class="text-xs font-light uppercase text-gray-400">
            <%= opp.match_date.strftime("%B") %>
          </p>
        </div>
      </div>
    </div>
    <div class="p-4">
      <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4 items-center">
        <%= image_tag "msealslogo.png", alt: "M-seals logo", class: "h-10 sm:h-24" %>
        <span class="text-2xl sm:text-3xl text-gradient bg-clip-text text-transparent bg-gradient-to-r from-[#fae115] to-yellow-700 font-bold">
        <%= opp.match_time.strftime("%I:%M %p") %>
      </span>
        <% if opp.opponent_team.team_badge.attached? %>
          <%= image_tag(opp.opponent_team.team_badge, class: "w-10 sm:w-24", alt: "Opponent Logo") %>
        <% end %>
      </div>
      <p class="text-center mt-2 sm:mt-6 text-gray-700">
        Murang'a Seals v <%= opp.opponent_team.name %>
      </p>
      <p class="text-center text-xs sm:text-sm mb-4 sm:mb-8 text-gray-500">
        <%= opp.venue %>
      </p>
    </div>
  </div>
<% end %>