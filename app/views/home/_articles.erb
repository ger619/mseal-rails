
<section class="relative">
  <div class="bg-black h-48">
  </div>
  <div class="bg-gradient-to-b from-yellow-500 to-black h-60">
  </div>
  <div class="absolute inset-0 flex justify-center py-8">
    <div class="flex flex-wrap justify-center gap-4">
      <!-- Card 1 -->
      <% @news.limit(4).each_with_index do |news, index| %>
        <% if index == 0 %>
          <%# Handle the last item separately %>
        <% else %>
          <% @news.length - index %>
          <article class="bg-gray-800 shadow-lg rounded-lg overflow-hidden w-72">
            <% if news.image.attached? %>
              <%= image_tag(news.image, class: "w-full h-48 object-cover")  %>
            <% end %>
            <div class="p-4">
              <h2 class="text-lg font-bold">
                <%= truncate(news.header_news, length: 30, separator: ' ') %>
              </h2>
              <div class="flex items-center mt-2 text-gray-400 text-sm">
                <span>ðŸŽ¬ <%= time_ago_in_words(news.created_at) %> ago</span>
              </div>
            </div>
          </article>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

<!-- Script for Carousel Navigation -->
<script>
    function scrollLeft() {
        document.querySelector('.scroll-snap').scrollBy({ left: -300, behavior: 'smooth' });
    }

    function scrollRight() {
        document.querySelector('.scroll-snap').scrollBy({ left: 300, behavior: 'smooth' });
    }
</script>