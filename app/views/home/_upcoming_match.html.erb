<!-- Card 3 -->
<% @opponent2.limit(1).each do |opp| %>
<div class="bg-white shadow-md overflow-hidden w-1/3">
  <div
    class="relative flex items-center bg-gradient-to-r from-gray-900 to-purple-900 p-5 shadow-lg"
  >
    <!-- Date Section -->
    <div class="flex items-center justify-center text-white text-4xl font-bold pr-4">
      <div class="text-center">
        <p>
          <%= opp.match_date.strftime("%d") %>
        </p>
      </div>
      <div>
        <p class="text-sm font-light uppercase">
          <%= opp.match_date.strftime("%A") %>
        </p>
        <p class="text-xs font-light uppercase text-gray-400">
          <%= opp.match_date.strftime("%B") %>
        </p>
      </div>
    </div>
  </div>
  <div class="p-4">
    <div class="flex justify-center space-x-4 items-center">
      <%= image_tag "msealslogo.png" , alt: "M-seals logo" ,class: "h-10"%>
      <span class="text-3xl text-gradient bg-clip-text text-transparent bg-gradient-to-r from-[#fae115] to-yellow-700 font-bold">
        <%= opp.match_time.strftime("%I:%M %p") %>
      </span>
      <% if opp.opponent_team.team_badge.attached? %>
        <%= image_tag (opp.opponent_team.team_badge), class: "w-10", alt: "Opponent Logo" %>
      <% end %>
    </div>
    <p class="text-center mt-6 text-gray-700">
      Murang'a Seals v <%= opp.opponent_team.name %>
    </p>
    <p class="text-center text-sm mb-8 text-gray-500">
      <%= opp.venue %>
    </p>
    <button class="w-full bg-[#fae115] text-white font-semibold py-2 mt-4 rounded-lg hover:bg-opacity-50">
      TICKETS
    </button>
  </div>
</div>
<% end %>