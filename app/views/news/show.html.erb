<div class="shadow-md pl-4 pr-4">
  <div class="sm:w-[200px] md:w-[100%] text-white lg:max-w-full xl:max-w-full bg-black mx-auto mt-[6px]">
    <div class="mt-4 pt-6 pb-6 flex gap-4 bg-black justify-between ">
      <p class="text-2xl font-bold mt-4 mr-3 m-4 flex uppercase">
          <%= @news.type_of_news %>
      </p>
      <p class="text-xs p-4">
        <%= @news.created_at.strftime("%d.%m.%Y") %>
      </p>
    </div>
    <div class="md:w-full w-full h-[60%] pl-24 pr-24">
      <%= render "news/image_show" %>
    </div>

    <p class="text-2xl font-semibold p-24"><%= @news.header_news %></p>
    <div class="pl-24 pr-24">
      <p class="text-base font-light mb-4 text-justify"><%= @news.content %></p>
    </div>


      <article class="flex justify-start mt-4 pl-24 pr-24">
        <!-- Card 2 -->
        <% @similar_news.limit(4).each do |similar_news| %>
        <div class="bg-black shadow-lg overflow-hidden w-1/4 mr-2">
          <%= link_to news_path(similar_news)  do%>
              <%= image_tag(similar_news.image, class: "rounded w-full") %>

              <div class="flex">
                <!-- Text Section -->
                <div class="p-4 text-center">
                  <div class="flex">
                    <a
                      href="#"
                      class="bg-[#FAE115] flex text-black mt-2 md:mt-3 rounded-lg sm:mt-2 p-1">
                      <%= similar_news.type_of_news %>
                    </a>
                    <a
                      href="#"
                      class="mt-4 inline-flex text-xs items-center text-white font-semibold"
                    >
                      <span class="ml-1">&rarr;</span> <%= time_ago_in_words(similar_news.created_at) %> ago
                    </a>
                  </div>
                    <p class="text-[#fff] mt-2 font-bold">
                      <%= truncate(similar_news.header_news, length: 30) %>
                    </p>
                </div>
              </div>
            </div>
            <% end %>
          <% end %>
      </article>
    </div>

    <% if current_user && current_user.role === 'moderator' %>
      <div class="grid grid-cols-2 gap-4 p-2">


      <div class="bg-[#FAE115] mt-2 p-2 md:mt-3 md:p-3 rounded-lg sm:mt-2 sm:p-2  mt-2 p-2">
        <%= link_to "Edit", edit_news_path(@news.id), class: "w-[50px] text-[#000]  lg:text-base md:text-sm sm:text-xs md:font-bold sm:font-semibold  md:py-2 sm:py-1 md:px-4 sm:px-2 p-1 rounded mt-2" %>
      </div>
      <div class="bg-[#FAE115] mt-2 p-2 md:mt-3 md:p-3 rounded-lg sm:mt-2 sm:p-2  mt-2 p-2">
        <%= button_to "Delete", @news, method: :delete, data: { turbo_method: :delete  },class: "text-[#000] font-semibold  " %>
      </div>
      </div>
    <% end %>
  </div>





