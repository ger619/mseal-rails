<div class="p-6 bg-[#FAE115] font-bold uppercase lg:text-5xl md:text-4xl text-3xl flex justify-between">
  <h1>NEWS</h1>
  <div>
    <% if current_user && current_user.role === 'moderator'  %>
        <%=link_to "Add News", new_news_path, class: "normal-case border-2 border-[#fff] hover:bg-[#fff] font-normal lg:text-2xl md:text-xl sm:text-sm sm:text-xl text-white hover:text-[#FAE115] p-2 rounded mb-2" %>
        <%=link_to "Add Advert", new_advert_path, class: "normal-case border-2 border-[#fff] hover:bg-[#fff] font-normal lg:text-2xl md:text-xl sm:text-sm sm:text-xl text-white hover:text-[#FAE115] p-2 rounded mb-2" %>

  <% end %>
  </div>
</div>

<div class="flex-col mt-10 md:ml-10">
  <div class="flex flex-col md:flex-row md:flex justify-center" >
    <div class="ml-4 mr-4 md:w-[800px] md:m-4 hover:border-[#FAE115] mb-10">
        <%= turbo_frame_tag :news do %>
          <%= render 'news/news_render' %>
        <% end %>

          <div class="flex justify-center gap-4 p-4">
              <% if @pagy.prev %>
                <%= link_to "Newer", url_for(page: @pagy.prev), class: "w-[100px] py-3 px-4 text-justify  inline-flex text-sm font-semibold text-[#FAE115]  border border-gray-300 rounded-lg bg-[#000] hover:bg-[#FAE115] uppercase hover:text-[#000] hover:border-[#FAE115] uppercase" %>
              <% end %>
              <% if @pagy.next %>
              <%= link_to "Older", url_for(page: @pagy.next), class: "w-[100px] py-2 px-6 text-justify font-semibold text-[#000] border border-gray-300 rounded-lg hover:bg-[#000] bg-[#FAE115] uppercase hover:text-[#FAE115] hover:border-[#FAE115] uppercase" %>
          <% end %>
          </div>
    </div >

    <%= render 'news/adverts' %>
  </div>
  
</div>
